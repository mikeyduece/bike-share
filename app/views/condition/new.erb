    <div class ="container">
      <div class="page-header">
        <h1><small></small></h1>
      </div>
      <h1 style="color: black"> Add a New Condition</h1>
        <form action="/conditions" method="post">
          <div class="form-group">
            <label style="color: black" for="InputDate">Condition Date:</label>
            <input type="text" class="form-control" name='weather_date' placeholder="Condition Date">
          </div>
					<div class="form-group">
            <label style="color: black" for="InputHiTemp">High Temperature:</label>
            <input type="text" class="form-control" name='max_temperature' placeholder="Condition High Temperature">
          </div>
					<div class="form-group">
            <label style="color: black" for="InputLowTemp">Low Temperature:</label>
            <input type="text" class="form-control" name='min_temperature' placeholder="Condition Low Temperature">
          </div>
					<div class="form-group">
            <label style="color: black" for="InputAvgTemp">Average Temperature:</label>
            <input type="text" class="form-control" name='mean_temperature' placeholder="Condition Average Temperature">
          </div>
					<div class="form-group">
            <label style="color: black" for="InputAvgHum">Average Humidity:</label>
            <input type="text" class="form-control" name='mean_humidity' placeholder="Condition Average Humidity">
          </div>
					<div class="form-group">
            <label style="color: black" for="InputAvgVis">Average Visibility:</label>
            <input type="text" class="form-control" name='mean_visibility' placeholder="Condition Average Visibility">
          </div>
					<div class="form-group">
            <label style="color: black" for="InputAvgWind">Average Wind Speed:</label>
            <input type="text" class="form-control" name='mean_wind_speed' placeholder="Condition Average Wind Speed">
          </div>
					<div class="form-group">
            <label style="color: black" for="InputPrecip">Average Humidity:</label>
            <input type="text" class="form-control" name='precipitation' placeholder="Condition Precipitation">
          </div>



          <input class="btn btn-default" type='submit' value = "Create this Station"/>
        </form>
    </div>
